@using Application.DTOS.CategoriDtos
@model List<ResultCategoriDto>
<div class="portfolio-main py-md-5 py-4">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-md-8">
                <div class="section-heading mb-sm-5 mb-4">
                    <h3 class="title-style mb-2">Özel Ürünlerimiz</h3>
                    <p class="lead">
                        36 yılın deneyimi ile özel ürünlerimizi denemelisiniz...
                    </p>
                </div>
            </div>
        </div>
       
            <div class="row galler-top">
            @foreach (var item in Model)
            {
                <div class="col-md-4 col-sm-6 protfolio-item hover14 mt-sm-0 mt-4">
                    <a href="menu.html" data-lightbox="example-set" data-title="Branding Design">
                        <figure>
                            <img src=@item.Image alt="product" class="img-fluid">
                            <div class="p-4">
                                <p>Bistros</p>
                                <a href="menu.html" class="mb-5 img-title">@item.CategoryName</a>
                            </div>
                        </figure>
                    </a>
                </div>
            }
            </div>

       
        <div class="text-center">
            <a href="menu.html" class="btn btn-style-white btn-style-primary mt-lg-5 mt-2">Menüyü Gör</a>
        </div>
    </div>
</div>

